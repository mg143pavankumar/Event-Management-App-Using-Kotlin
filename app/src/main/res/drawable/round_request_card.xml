    </item>

    <!-- White Top color -->
    <item android:bottom="20px">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_500" />
            <corners android:radius="@dimen/borderRadius" />
        </shape>
    </item>
</layer-list>